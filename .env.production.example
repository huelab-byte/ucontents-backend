# Production Environment Configuration
# Copy this file to .env and fill in your actual values

APP_NAME="Social Management System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://app.ucontents.com
FRONTEND_URL=https://ucontents.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ucontents_db
DB_USERNAME=ucontents_user
DB_PASSWORD=your_strong_database_password_here

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=app.ucontents.com

# Broadcasting
BROADCAST_CONNECTION=pusher

# Filesystem
FILESYSTEM_DISK=local
# For production, consider using S3-compatible storage:
# FILESYSTEM_DISK=s3

# Queue Configuration (Redis)
QUEUE_CONNECTION=redis
REDIS_QUEUE=default
REDIS_QUEUE_RETRY_AFTER=90

# Cache Configuration (Redis)
CACHE_STORE=redis
CACHE_PREFIX=ucontents

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@ucontents.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (if using S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Qdrant Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_FOOTAGE_COLLECTION=footage_embeddings

# Pusher Configuration (for real-time notifications)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

BROADCAST_DRIVER=pusher

# JWT Configuration (for API clients)
JWT_SECRET=
JWT_TTL=60

# Storage Settings (configure via admin panel after deployment)
# These are managed through the StorageManagement module

# Queue Names (optional, defaults used if not set)
FOOTAGE_UPLOAD_QUEUE=footage-uploads
IMAGE_UPLOAD_QUEUE=image-uploads
AUDIO_UPLOAD_QUEUE=audio-uploads
BGM_UPLOAD_QUEUE=bgm-uploads
